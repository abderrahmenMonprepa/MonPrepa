<p id="notice"><%= notice %></p>

<h1>Video Histories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @video_histories.each do |video_history| %>
      <tr>
        <td><%= video_history.user %></td>
        <td><%= video_history.video %></td>
        <td><%= link_to 'Show', video_history %></td>
        <td><%= link_to 'Edit', edit_video_history_path(video_history) %></td>
        <td><%= link_to 'Destroy', video_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

