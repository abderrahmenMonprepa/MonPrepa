<style type="text/css">

@import url("https://fonts.googleapis.com/css?family=Rubik:300,400,500,600,700");
/* Style for login view if user is not connected */

.login-register {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  height: 100%;
  width: 100%;
  padding: 10% 0;
  position: fixed; }

.login-box {
  width: 300px;
  margin: 0 auto; }
  .login-box .footer {
    width: 100%;
    left: 0px;
    right: 0px; }
  .login-box .social {
    display: block;
    margin-bottom: 30px; }

#recoverform {
  display: none; }

.login-sidebar {
  padding: 0px;
  margin-top: 0px; }
  .login-sidebar .login-box {
    right: 0px;
    position: absolute;
    height: 100%; }

</style>


        <div class="login-register" style="background-image:url(/assets/background/login-register.jpg);">
            <div class="login-box card">
                <div class="card-body">

                  <h4>Modifier mot de passe </h4>

                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put } , class: "form-horizontal form-material" , id: "loginform") do |f| %>
                      <%= devise_error_messages! %>
                      <%= f.hidden_field :reset_password_token %>

                      <div class="form-group">
                        <%= f.label :password, "Nouveau mot de passe" %><br />
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> charact√®res au moins)</em><br />
                        <% end %>
                        <%= f.password_field :password, autofocus: true, autocomplete: "off" , class: 'form-control' %>
                      </div>

                      <div class="form-group">
                        <%= f.label :password_confirmation, "Confirm new password" %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control' %>
                      </div>

                      <div class="col-xs-12 p-b-20">
                        <button class="btn btn-block btn-lg btn-info btn-rounded" type="submit">Valider</button>
                      </div>
                  <% end %>
                    
              </div>
          </div>
        </div>





