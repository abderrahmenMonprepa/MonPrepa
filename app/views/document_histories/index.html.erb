<p id="notice"><%= notice %></p>

<h1>Document Histories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Document</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @document_histories.each do |document_history| %>
      <tr>
        <td><%= document_history.user %></td>
        <td><%= document_history.document %></td>
        <td><%= link_to 'Show', document_history %></td>
        <td><%= link_to 'Edit', edit_document_history_path(document_history) %></td>
        <td><%= link_to 'Destroy', document_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

